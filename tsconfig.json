{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2019",
      "es2016.array.include"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "build/types",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "__node_modules__",
    "build",
    "sandbox",
    "*.js"
  ]
}
